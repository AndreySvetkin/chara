<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#015666">

    <TextView
        android:id="@+id/textInterviewDecision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#015666"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Решение по интервью"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textFontWeight="700"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="80dp"
        android:background="#5FBDCE"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textCandidateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aldrich"
                android:text="Кандидат: Иван Иванов Иванович"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textInterviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/aldrich"
                android:text="Дата интервью: 01.07.2023"
                android:textColor="#000000"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkboxAccepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aldrich"
                android:text="Принят"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Position TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="Должность:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/edit_text"
                android:fontFamily="@font/aldrich"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aldrich"
                android:text="Зарплата:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editSalary"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/edit_text"
                android:fontFamily="@font/aldrich"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonSave"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="95dp"
            android:layout_height="91dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="270dp"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="#00FFFFFF"
            android:backgroundTintMode="multiply"
            android:fontFamily="@font/aldrich"
            android:scaleType="centerCrop"
            android:src="@android:drawable/checkbox_on_background"
            android:textColor="#000000"
            android:textSize="16sp"
            android:tint="#FF7C00"
            android:tintMode="multiply" />

    </RelativeLayout>

    <!-- Candidate Name TextView -->

    <!-- Interview Date TextView -->

    <!-- Accepted CheckBox -->

    <!-- Details Layout (Initially Hidden) -->

    <!-- Save Button -->

</RelativeLayout>