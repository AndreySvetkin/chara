<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#5FBDCE"
    android:clipToOutline="false"
    android:outlineSpotShadowColor="#000000"
    tools:context=".activity.seeker.SeekerProfile">

    <TextView
        android:id="@+id/textTitleVacancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="#015666"
        android:breakStrategy="high_quality"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="20dp"
        android:text="Frontend Developer"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textFontWeight="700"
        android:textSize="24sp" />

    <!-- Include other fields such as education, work experience, skills, etc. -->

    <ImageView
        android:id="@+id/imagePhoto"
        android:layout_width="166dp"
        android:layout_height="158dp"
        android:layout_below="@id/textTitleVacancy"
        android:layout_marginTop="7dp"
        android:clipToOutline="false"
        android:outlineProvider="bounds"
        android:outlineSpotShadowColor="#000000"
        android:paddingHorizontal="0dp"
        android:paddingVertical="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:srcCompat="@mipmap/default_avatar"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/btnInterview"
        style="@android:style/Widget.ImageButton"
        android:layout_width="87dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="1dp"
        android:background="@android:drawable/btn_default"
        android:backgroundTint="#FF7C00"
        android:backgroundTintMode="multiply"
        android:src="@mipmap/interview_foreground"
        android:text="Пригласить на собеседование"
        tools:src="@mipmap/interview_foreground" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="233dp"
        android:layout_height="165dp"
        android:layout_alignTop="@+id/imagePhoto"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/imagePhoto"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textFIO"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/aldrich"
            android:text="Иван Иванов Иванович"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aldrich"
            android:text="Дата рождения: 01.01.1990"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textMaritalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/aldrich"
            android:text="Семейное положение: холост"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aldrich"
            android:text="Телефон: +89003002552"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aldrich"
            android:text="Email: johndoe@example.com"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrich"
            android:padding="8dp"
            android:text="Образование:\n2019-2023 г. СГТУ имени Гагарина Ю. А. "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrich"
            android:padding="8dp"
            android:text="Опыт работы: 5 лет"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvProfessionalSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrich"
            android:padding="8dp"
            android:text="Профессиональные навыки: Java, Android Studio"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPersonalSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrich"
            android:padding="8dp"
            android:text="Личные навыки: коммуникабельность, ответственность"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAdditionalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Дополнительная информация: Участвовал в разработке приложения X"
            android:textSize="16sp"
            android:fontFamily="@font/aldrich"
            android:textColor="#000000" />

    </LinearLayout>

</RelativeLayout>