<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#015666"
    android:padding="0dp"
    tools:context=".activity.employee.EmployeeInfoActivity">


    <ImageButton
        android:id="@+id/btnDocuments"
        style="@android:style/Widget.ImageButton"
        android:layout_width="87dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/btnInterview"
        android:background="@android:drawable/btn_default"
        android:backgroundTint="#FF7C00"
        android:backgroundTintMode="multiply"
        android:src="@mipmap/documents_foreground"
        android:text="Documents"
        tools:src="@mipmap/documents_foreground" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#015666"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="20dp"
        android:text="Информация о работнике"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textFontWeight="700"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_below="@+id/textTitle"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="90dp"
        android:background="#5FBDCE">

        <ImageView
            android:id="@+id/employeePhoto"
            android:layout_width="167dp"
            android:layout_height="107dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:clipToOutline="false"
            android:outlineProvider="bounds"
            android:outlineSpotShadowColor="#000000"
            app:srcCompat="@mipmap/default_avatar"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/linearLayoutMoreDetails"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_below="@+id/linearLayoutDetails"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:fontFamily="@font/aldrich"
                android:text="Адрес: ул. Пушкина, д. Колотушкина"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textChief"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/aldrich"
                android:text="Начальник: Иван Петров"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textDepart"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:fontFamily="@font/aldrich"
                android:text="Отдел: IT"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textPost"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/aldrich"
                android:text="Должность: Разработчик"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textPassport"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:fontFamily="@font/aldrich"
                android:text="Паспорт: Серия 1234, Номер 567890"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/employeePhoto"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textFIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="Иван Иванов Иванович"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/aldrich"
                android:text="Телефон: +89003002552"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/aldrich"
                android:text="Email: bestworker@mail.ru"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>